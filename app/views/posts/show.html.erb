<p id="notice"><%= notice %></p>


<% @post.attachments.each do |attachment| %>
    <%= image_tag(attachment.pic.url(:medium), :class => 'big-img') %>
<% end %>

<h3><%= @post.title %></h3>

<p>
  <b>By </b> <%= @post.user.name %>
</p>


<h5>
  <%= @post.content.gsub(/\n/,"<br>").html_safe %>
</h5>

<br>


<%= link_to 'Edit', edit_post_path(@post), :class=> "small black radius button"  %>
