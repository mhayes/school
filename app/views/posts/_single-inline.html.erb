
  <div class="four columns">
    <% post.attachments.each do |attachment| %>
        <%= image_tag(attachment.pic.url(:feed), :class => 'big-img') %>
    <% end %>

  <h5><%= post.title %></h5>
    <%= post.created_at %>, <%= post.user.name %>

    <p>
      <%= post.content[0..400] %>... <%= link_to "Read more...", post %>
    </p>


</div>